# mvirt kernel bare-metal target config
# Hardware drivers for physical servers

# ===========================================
# SYSTEM BASICS
# ===========================================

# ACPI/DMI (required for bare metal)
CONFIG_ACPI=y
CONFIG_ACPI_PROCESSOR=y
CONFIG_ACPI_THERMAL=y
CONFIG_ACPI_BUTTON=y
CONFIG_ACPI_FAN=y
CONFIG_DMI=y
CONFIG_MTRR=y
CONFIG_NR_CPUS=256

# Firmware loader (needed by many drivers)
CONFIG_FW_LOADER=y
CONFIG_FW_LOADER_COMPRESS=y
CONFIG_FW_LOADER_COMPRESS_XZ=y
CONFIG_FW_LOADER_COMPRESS_ZSTD=y

# ===========================================
# STORAGE DRIVERS
# ===========================================

# SCSI subsystem (needed for SATA/USB storage)
CONFIG_SCSI=y
CONFIG_BLK_DEV_SD=y
CONFIG_BLK_DEV_SR=y
CONFIG_CHR_DEV_SG=y

# SATA/AHCI
CONFIG_ATA=y
CONFIG_SATA_AHCI=y
CONFIG_ATA_PIIX=y
CONFIG_ATA_SFF=y
CONFIG_ATA_BMDMA=y

# NVMe
CONFIG_BLK_DEV_NVME=y

# ===========================================
# USB SUPPORT
# ===========================================

CONFIG_USB_SUPPORT=y
CONFIG_USB=y
CONFIG_USB_PCI=y
CONFIG_USB_XHCI_HCD=y
CONFIG_USB_XHCI_PCI=y
CONFIG_USB_EHCI_HCD=y
CONFIG_USB_EHCI_PCI=y
CONFIG_USB_OHCI_HCD=y
CONFIG_USB_OHCI_HCD_PCI=y
CONFIG_USB_UHCI_HCD=y
CONFIG_USB_STORAGE=y

# ===========================================
# INPUT (keyboard/mouse)
# ===========================================

CONFIG_INPUT_KEYBOARD=y
CONFIG_KEYBOARD_ATKBD=y
CONFIG_INPUT_MOUSE=y
CONFIG_MOUSE_PS2=y
CONFIG_SERIO=y
CONFIG_SERIO_I8042=y
CONFIG_SERIO_LIBPS2=y
CONFIG_INPUT_EVDEV=y

# HID (USB keyboard/mouse)
CONFIG_HID=y
CONFIG_HID_GENERIC=y
CONFIG_USB_HID=y

# ===========================================
# HARDWARE MONITORING
# ===========================================

CONFIG_HWMON=y

# ===========================================
# PHY/MDIO (needed by network drivers)
# ===========================================

CONFIG_PHYLIB=y
CONFIG_MDIO_BUS=y
CONFIG_MDIO_DEVICE=y
CONFIG_REALTEK_PHY=y
CONFIG_BROADCOM_PHY=y
CONFIG_MARVELL_PHY=y
CONFIG_INTEL_XWAY_PHY=y

# ===========================================
# NETWORK DRIVERS
# ===========================================

# Intel NICs
CONFIG_E100=y
CONFIG_E1000=y
CONFIG_E1000E=y
CONFIG_IGB=y
CONFIG_IXGBE=y
CONFIG_I40E=y
CONFIG_ICE=y
CONFIG_IGC=y

# Realtek NICs
CONFIG_8139CP=y
CONFIG_8139TOO=y
CONFIG_R8169=y

# Broadcom NICs
CONFIG_B44=y
CONFIG_BNX2=y
CONFIG_TIGON3=y
CONFIG_BNX2X=y
CONFIG_BNXT=y

# Mellanox NICs (ConnectX-3/4/5/6/7)
CONFIG_MLX4_CORE=y
CONFIG_MLX4_EN=y
CONFIG_MLX5_CORE=y
CONFIG_MLX5_CORE_EN=y
CONFIG_MLXFW=y
