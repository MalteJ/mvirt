# mvirt kernel base config
# Common options for both VM and bare-metal targets
# For use with: make tinyconfig && merge_config.sh

# 64-bit and SMP
CONFIG_64BIT=y
CONFIG_SMP=y

# Basic requirements
CONFIG_PRINTK=y
CONFIG_TTY=y
CONFIG_BINFMT_ELF=y
CONFIG_BINFMT_SCRIPT=y
CONFIG_MULTIUSER=y

# PCI (required for virtio-pci and hardware NICs)
CONFIG_PCI=y
CONFIG_PCI_MSI=y

# Block layer
CONFIG_BLOCK=y

# Networking stack
CONFIG_NET=y
CONFIG_NETDEVICES=y
CONFIG_PACKET=y
CONFIG_UNIX=y
CONFIG_INET=y
CONFIG_IPV6=y

# Serial console
CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y
CONFIG_SERIAL_8250_NR_UARTS=4
CONFIG_SERIAL_8250_RUNTIME_UARTS=4

# Filesystems
CONFIG_EXT4_FS=y
CONFIG_TMPFS=y
CONFIG_PROC_FS=y
CONFIG_SYSFS=y
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y

# Initramfs support
CONFIG_BLK_DEV_INITRD=y
CONFIG_RD_GZIP=y

# Required syscall support
CONFIG_FUTEX=y
CONFIG_EPOLL=y
CONFIG_SIGNALFD=y
CONFIG_TIMERFD=y
CONFIG_EVENTFD=y
CONFIG_AIO=y
CONFIG_INOTIFY_USER=y

# Disable unnecessary features
# CONFIG_SOUND is not set
# CONFIG_DRM is not set
# CONFIG_WIRELESS is not set
# CONFIG_WLAN is not set
# CONFIG_MD is not set
# CONFIG_NFS_FS is not set
# CONFIG_DEBUG_INFO is not set
# CONFIG_FTRACE is not set
