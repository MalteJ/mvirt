# mvirt kernel VM target config
# Virtio drivers for cloud-hypervisor/QEMU VMs

# Virtio core
CONFIG_VIRTIO_MENU=y
CONFIG_VIRTIO=y
CONFIG_VIRTIO_PCI=y
CONFIG_VIRTIO_PCI_LEGACY=y

# Virtio devices
CONFIG_VIRTIO_BLK=y
CONFIG_VIRTIO_NET=y
CONFIG_VIRTIO_CONSOLE=y
CONFIG_HW_RANDOM_VIRTIO=y
CONFIG_SCSI_VIRTIO=y

# vsock (VM <-> host communication)
CONFIG_VSOCKETS=y
CONFIG_VIRTIO_VSOCKETS=y
