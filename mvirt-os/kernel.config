# Cloud-Hypervisor minimal kernel config
# For use with: make tinyconfig && merge_config.sh

# 64-bit and SMP
CONFIG_64BIT=y
CONFIG_SMP=y

# Basic requirements
CONFIG_PRINTK=y
CONFIG_TTY=y
CONFIG_BINFMT_ELF=y
CONFIG_BINFMT_SCRIPT=y
CONFIG_MULTIUSER=y

# PCI (required for virtio-pci)
CONFIG_PCI=y
CONFIG_PCI_MSI=y

# Virtio
CONFIG_VIRTIO_MENU=y
CONFIG_VIRTIO=y
CONFIG_VIRTIO_PCI=y
CONFIG_VIRTIO_PCI_LEGACY=y
CONFIG_VIRTIO_BLK=y
CONFIG_VIRTIO_NET=y
CONFIG_VIRTIO_CONSOLE=y
CONFIG_HW_RANDOM_VIRTIO=y

# Block layer
CONFIG_BLOCK=y

# Networking
CONFIG_NET=y
CONFIG_NETDEVICES=y
CONFIG_PACKET=y
CONFIG_UNIX=y
CONFIG_INET=y
CONFIG_IPV6=y

# Serial console
CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y
CONFIG_SERIAL_8250_NR_UARTS=4
CONFIG_SERIAL_8250_RUNTIME_UARTS=4

# Filesystems
CONFIG_EXT4_FS=y
CONFIG_TMPFS=y
CONFIG_PROC_FS=y
CONFIG_SYSFS=y
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y

# Initramfs support
CONFIG_BLK_DEV_INITRD=y
CONFIG_RD_GZIP=y

# Required syscall support
CONFIG_FUTEX=y
CONFIG_EPOLL=y
CONFIG_SIGNALFD=y
CONFIG_TIMERFD=y
CONFIG_EVENTFD=y
CONFIG_AIO=y
CONFIG_INOTIFY_USER=y

# ===========================================
# BARE METAL HARDWARE SUPPORT
# ===========================================

# System basics
CONFIG_ACPI=y
CONFIG_ACPI_PROCESSOR=y
CONFIG_ACPI_THERMAL=y
CONFIG_ACPI_BUTTON=y
CONFIG_ACPI_FAN=y
CONFIG_DMI=y
CONFIG_MTRR=y
CONFIG_NR_CPUS=256

# Firmware loader (needed by many drivers)
CONFIG_FW_LOADER=y
CONFIG_FW_LOADER_COMPRESS=y
CONFIG_FW_LOADER_COMPRESS_XZ=y
CONFIG_FW_LOADER_COMPRESS_ZSTD=y

# SCSI subsystem (needed for SATA/USB storage)
CONFIG_SCSI=y
CONFIG_BLK_DEV_SD=y
CONFIG_BLK_DEV_SR=y
CONFIG_CHR_DEV_SG=y
CONFIG_SCSI_VIRTIO=y

# SATA/AHCI
CONFIG_ATA=y
CONFIG_SATA_AHCI=y
CONFIG_ATA_PIIX=y
CONFIG_ATA_SFF=y
CONFIG_ATA_BMDMA=y

# NVMe
CONFIG_BLK_DEV_NVME=y

# USB Support
CONFIG_USB_SUPPORT=y
CONFIG_USB=y
CONFIG_USB_PCI=y
CONFIG_USB_XHCI_HCD=y
CONFIG_USB_XHCI_PCI=y
CONFIG_USB_EHCI_HCD=y
CONFIG_USB_EHCI_PCI=y
CONFIG_USB_OHCI_HCD=y
CONFIG_USB_OHCI_HCD_PCI=y
CONFIG_USB_UHCI_HCD=y
CONFIG_USB_STORAGE=y

# Input (keyboard/mouse)
CONFIG_INPUT_KEYBOARD=y
CONFIG_KEYBOARD_ATKBD=y
CONFIG_INPUT_MOUSE=y
CONFIG_MOUSE_PS2=y
CONFIG_SERIO=y
CONFIG_SERIO_I8042=y
CONFIG_SERIO_LIBPS2=y
CONFIG_INPUT_EVDEV=y

# HID (USB keyboard/mouse)
CONFIG_HID=y
CONFIG_HID_GENERIC=y
CONFIG_USB_HID=y

# HWMON (for NIC temperature sensors)
CONFIG_HWMON=y

# PHY/MDIO (needed by network drivers)
CONFIG_PHYLIB=y
CONFIG_MDIO_BUS=y
CONFIG_MDIO_DEVICE=y
CONFIG_REALTEK_PHY=y
CONFIG_BROADCOM_PHY=y
CONFIG_MARVELL_PHY=y
CONFIG_INTEL_XWAY_PHY=y

# ===========================================
# NETWORK DRIVERS
# ===========================================

# Intel NICs
CONFIG_E100=y
CONFIG_E1000=y
CONFIG_E1000E=y
CONFIG_IGB=y
CONFIG_IXGBE=y
CONFIG_I40E=y
CONFIG_ICE=y
CONFIG_IGC=y

# Realtek NICs
CONFIG_8139CP=y
CONFIG_8139TOO=y
CONFIG_R8169=y

# Broadcom NICs
CONFIG_B44=y
CONFIG_BNX2=y
CONFIG_TIGON3=y
CONFIG_BNX2X=y
CONFIG_BNXT=y

# Mellanox NICs (ConnectX-3/4/5/6/7)
CONFIG_MLX4_CORE=y
CONFIG_MLX4_EN=y
CONFIG_MLX5_CORE=y
CONFIG_MLX5_CORE_EN=y
CONFIG_MLXFW=y

# ===========================================
# Keep virtio for VM compatibility
# ===========================================
CONFIG_VIRTIO_BLK=y
CONFIG_VIRTIO_NET=y
CONFIG_VIRTIO_CONSOLE=y

# Disable unnecessary features
# CONFIG_SOUND is not set
# CONFIG_DRM is not set
# CONFIG_WIRELESS is not set
# CONFIG_WLAN is not set
# CONFIG_MD is not set
# CONFIG_NFS_FS is not set
# CONFIG_DEBUG_INFO is not set
# CONFIG_FTRACE is not set
