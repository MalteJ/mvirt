# mvirt-uos kernel config
# Minimal Linux kernel for MicroVMs (cloud-hypervisor)
# For use with: make tinyconfig && merge_config.sh

# ===========================================
# CORE SYSTEM
# ===========================================

# 64-bit and SMP
CONFIG_64BIT=y
CONFIG_SMP=y

# Basic requirements
CONFIG_PRINTK=y
CONFIG_TTY=y
CONFIG_BINFMT_ELF=y
CONFIG_BINFMT_SCRIPT=y
CONFIG_MULTIUSER=y

# PCI (required for virtio-pci)
CONFIG_PCI=y
CONFIG_PCI_MSI=y

# Block layer
CONFIG_BLOCK=y

# ===========================================
# VIRTIO (cloud-hypervisor)
# ===========================================

CONFIG_VIRTIO_MENU=y
CONFIG_VIRTIO=y
CONFIG_VIRTIO_PCI=y
CONFIG_VIRTIO_PCI_LEGACY=y

# Virtio devices
CONFIG_VIRTIO_BLK=y
CONFIG_VIRTIO_NET=y
CONFIG_VIRTIO_CONSOLE=y
CONFIG_HW_RANDOM_VIRTIO=y
# CONFIG_SCSI_VIRTIO is not set

# vsock (VM <-> host communication)
CONFIG_VSOCKETS=y
CONFIG_VIRTIO_VSOCKETS=y

# ===========================================
# NETWORKING
# ===========================================

CONFIG_NET=y
CONFIG_NETDEVICES=y
CONFIG_PACKET=y
CONFIG_UNIX=y
CONFIG_INET=y
CONFIG_IPV6=y

# ===========================================
# SERIAL CONSOLE
# ===========================================

CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y
CONFIG_SERIAL_8250_NR_UARTS=4
CONFIG_SERIAL_8250_RUNTIME_UARTS=4

# ===========================================
# FILESYSTEMS
# ===========================================

CONFIG_EXT4_FS=y
CONFIG_TMPFS=y
CONFIG_PROC_FS=y
CONFIG_SYSFS=y
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y

# Initramfs support
CONFIG_BLK_DEV_INITRD=y
CONFIG_RD_GZIP=y
# Disable unused compression formats
# CONFIG_RD_BZIP2 is not set
# CONFIG_RD_LZMA is not set
# CONFIG_RD_XZ is not set
# CONFIG_RD_LZO is not set
# CONFIG_RD_LZ4 is not set
# CONFIG_RD_ZSTD is not set

# ===========================================
# CGROUPS (for container resource limits)
# ===========================================

CONFIG_CGROUPS=y
CONFIG_CGROUP_CPUACCT=y
CONFIG_CGROUP_DEVICE=y
CONFIG_CGROUP_FREEZER=y
CONFIG_CGROUP_PIDS=y
CONFIG_CGROUP_SCHED=y
CONFIG_MEMCG=y
CONFIG_CPUSETS=y

# ===========================================
# REQUIRED SYSCALLS
# ===========================================

CONFIG_FUTEX=y
CONFIG_EPOLL=y
CONFIG_SIGNALFD=y
CONFIG_TIMERFD=y
CONFIG_EVENTFD=y
CONFIG_AIO=y
CONFIG_INOTIFY_USER=y

# ===========================================
# HYPERVISOR GUEST SUPPORT
# ===========================================

CONFIG_HYPERVISOR_GUEST=y
CONFIG_PARAVIRT=y
CONFIG_KVM_GUEST=y

# ===========================================
