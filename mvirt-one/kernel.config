# mvirt-uos kernel config
# Minimal Linux kernel for MicroVMs (cloud-hypervisor)
# For use with: make tinyconfig && merge_config.sh

# ===========================================
# CORE SYSTEM
# ===========================================

# 64-bit and SMP
CONFIG_64BIT=y
CONFIG_SMP=y

# Basic requirements
CONFIG_PRINTK=y
CONFIG_TTY=y
CONFIG_BINFMT_ELF=y
CONFIG_BINFMT_SCRIPT=y
CONFIG_MULTIUSER=y

# PCI (required for virtio-pci)
CONFIG_PCI=y
CONFIG_PCI_MSI=y

# Block layer
CONFIG_BLOCK=y

# ===========================================
# VIRTIO (cloud-hypervisor)
# ===========================================

CONFIG_VIRTIO_MENU=y
CONFIG_VIRTIO=y
CONFIG_VIRTIO_PCI=y
CONFIG_VIRTIO_PCI_LEGACY=y

# Virtio devices
CONFIG_VIRTIO_BLK=y
CONFIG_VIRTIO_NET=y
CONFIG_VIRTIO_CONSOLE=y
CONFIG_HW_RANDOM_VIRTIO=y
# CONFIG_SCSI_VIRTIO is not set

# vsock (VM <-> host communication)
CONFIG_VSOCKETS=y
CONFIG_VIRTIO_VSOCKETS=y

# ===========================================
# NETWORKING
# ===========================================

CONFIG_NET=y
CONFIG_NETDEVICES=y
CONFIG_PACKET=y
CONFIG_UNIX=y
CONFIG_INET=y
CONFIG_IPV6=y

# ===========================================
# SERIAL CONSOLE
# ===========================================

CONFIG_SERIAL_8250=y
CONFIG_SERIAL_8250_CONSOLE=y
CONFIG_SERIAL_8250_NR_UARTS=4
CONFIG_SERIAL_8250_RUNTIME_UARTS=4

# ===========================================
# FILESYSTEMS
# ===========================================

CONFIG_EXT4_FS=y
CONFIG_TMPFS=y
CONFIG_PROC_FS=y
CONFIG_SYSFS=y
CONFIG_DEVTMPFS=y
CONFIG_DEVTMPFS_MOUNT=y

# Initramfs support
CONFIG_BLK_DEV_INITRD=y
CONFIG_RD_GZIP=y
# Disable unused compression formats
# CONFIG_RD_BZIP2 is not set
# CONFIG_RD_LZMA is not set
# CONFIG_RD_XZ is not set
# CONFIG_RD_LZO is not set
# CONFIG_RD_LZ4 is not set
# CONFIG_RD_ZSTD is not set

# ===========================================
# CGROUPS (for container resource limits)
# ===========================================

CONFIG_CGROUPS=y
CONFIG_CGROUP_CPUACCT=y
CONFIG_CGROUP_DEVICE=y
CONFIG_CGROUP_FREEZER=y
CONFIG_CGROUP_PIDS=y
CONFIG_CGROUP_SCHED=y
CONFIG_MEMCG=y
CONFIG_CPUSETS=y

# ===========================================
# REQUIRED SYSCALLS
# ===========================================

CONFIG_FUTEX=y
CONFIG_EPOLL=y
CONFIG_SIGNALFD=y
CONFIG_TIMERFD=y
CONFIG_EVENTFD=y
CONFIG_AIO=y
CONFIG_INOTIFY_USER=y

# ===========================================
# HYPERVISOR GUEST SUPPORT
# ===========================================

CONFIG_HYPERVISOR_GUEST=y
CONFIG_PARAVIRT=y
CONFIG_KVM_GUEST=y

# ===========================================
# DISABLE UNNECESSARY FEATURES
# ===========================================

# --- Hardware drivers (not needed in VM) ---
# CONFIG_SOUND is not set
# CONFIG_DRM is not set
# CONFIG_WIRELESS is not set
# CONFIG_WLAN is not set
# CONFIG_MD is not set
# CONFIG_USB is not set
# CONFIG_INTEL_MEI is not set
# CONFIG_INTEL_MEI_ME is not set
# CONFIG_EEPROM_93CX6 is not set
# CONFIG_MICROCODE is not set

# --- CPU frequency scaling (VM doesn't control host CPU) ---
# CONFIG_CPU_FREQ is not set

# --- Console/Input (only using serial) ---
# CONFIG_VT is not set
# CONFIG_VT_CONSOLE is not set
# CONFIG_VGA_CONSOLE is not set
# CONFIG_INPUT is not set
# CONFIG_HID is not set
# CONFIG_HID_GENERIC is not set
# CONFIG_LEGACY_PTYS is not set

# --- Performance/Debug (not needed in production) ---
# CONFIG_PERF_EVENTS is not set
# CONFIG_DEBUG_INFO is not set
# CONFIG_FTRACE is not set
# CONFIG_INPUT_KEYBOARD is not set
# CONFIG_INPUT_MOUSE is not set

# --- Memory/Swap (MicroVM uses fixed memory) ---
# CONFIG_SWAP is not set
# CONFIG_HOTPLUG_CPU is not set

# --- IO Schedulers (none/mq-deadline not needed) ---
# CONFIG_MQ_IOSCHED_DEADLINE is not set
# CONFIG_MQ_IOSCHED_KYBER is not set

# --- Filesystems (only need tmpfs/proc/sys/devtmpfs) ---
# CONFIG_NFS_FS is not set
# CONFIG_MSDOS_PARTITION is not set
# CONFIG_EFI_PARTITION is not set

# --- XZ decoder (only need x86, not other archs) ---
# CONFIG_XZ_DEC_POWERPC is not set
# CONFIG_XZ_DEC_ARM is not set
# CONFIG_XZ_DEC_ARMTHUMB is not set
# CONFIG_XZ_DEC_ARM64 is not set
# CONFIG_XZ_DEC_SPARC is not set
# CONFIG_XZ_DEC_RISCV is not set

# --- Serial drivers (only need basic 8250) ---
# CONFIG_SERIAL_8250_PCI is not set
# CONFIG_SERIAL_8250_EXAR is not set
# CONFIG_SERIAL_8250_LPSS is not set
# CONFIG_SERIAL_8250_MID is not set
# CONFIG_SERIAL_8250_PERICOM is not set

# --- Misc unnecessary features ---
# CONFIG_X86_VSYSCALL_EMULATION is not set
# CONFIG_SCHED_MC_PRIO is not set

# --- CPU support (only Intel/AMD needed) ---
# CONFIG_CPU_SUP_HYGON is not set
# CONFIG_CPU_SUP_CENTAUR is not set
# CONFIG_CPU_SUP_ZHAOXIN is not set

# --- AMD/Intel hardware features (not in VM) ---
# CONFIG_AMD_NB is not set
# CONFIG_PERF_EVENTS_INTEL_UNCORE is not set
# CONFIG_PERF_EVENTS_INTEL_RAPL is not set
# CONFIG_PERF_EVENTS_INTEL_CSTATE is not set

# --- BPF (disabled - containers can use eBPF in host) ---
# CONFIG_BPF is not set

# --- Tunneling (not needed for simple networking) ---
# CONFIG_NET_IP_TUNNEL is not set
# CONFIG_INET_TUNNEL is not set
# CONFIG_IPV6_SIT is not set

# --- Network failover (not needed) ---
# CONFIG_FAILOVER is not set
# CONFIG_NET_FAILOVER is not set

# --- Legacy/unused x86 features ---
# CONFIG_ISA_DMA_API is not set
# CONFIG_X86_MPPARSE is not set
# CONFIG_HPET_TIMER is not set

# --- Security features (overhead in VM) ---
# CONFIG_X86_KERNEL_IBT is not set
# CONFIG_X86_CET is not set

# --- vsock diagnostics ---
# CONFIG_VSOCKETS_LOOPBACK is not set
# CONFIG_VSOCKETS_DIAG is not set

# --- Network diagnostics (keep INET_DIAG for ss/netstat) ---
# CONFIG_INET_TCP_DIAG is not set
